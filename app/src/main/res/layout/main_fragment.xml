<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.main.MainFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:progress="75"
        tools:visibility="visible" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/progress_text_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/progress_indicator"
        tools:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/cardview_light_background"
            tools:text="Upload Complete" />
    </com.google.android.material.card.MaterialCardView>

    <com.tijiebo.julia.ui.julia.JuliaView
        android:id="@+id/julia_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="56dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zoom_in"
        style="@style/IconStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_zoom_in_24"
        app:layout_constraintBottom_toTopOf="@id/zoom_out"
        app:layout_constraintStart_toStartOf="@id/reset" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zoom_out"
        style="@style/IconStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_zoom_out_24"
        app:layout_constraintBottom_toTopOf="@id/reset"
        app:layout_constraintStart_toStartOf="@id/reset" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reset"
        style="@style/IconStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_location_24"
        app:layout_constraintBottom_toBottomOf="@id/julia_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/julia_view"
        app:rippleColor="@color/purple_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/label"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_highlights"
        android:textAllCaps="false"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/highlights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label"
        tools:itemCount="1"
        tools:listitem="@layout/highlights_item" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EEEEEE"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shutter"
                android:layout_width="54dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cornerRadius="48dp"
                app:icon="@drawable/ic_circle_48"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#EEEEEE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/purple_200" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/more"
                style="@style/IconStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                app:backgroundTint="#EEE"
                app:icon="@drawable/ic_add_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gallery"
                style="@style/IconStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                app:backgroundTint="#EEE"
                app:icon="@drawable/ic_photo_library_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/new_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|start"
                android:layout_margin="10dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:padding="0dp"
                android:visibility="gone"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="@id/gallery"
                app:layout_constraintTop_toTopOf="@id/gallery"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>