<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment"
        android:animateLayoutChanges="true">

    <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/teal_200"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="75" />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/progress_text_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/progress_indicator"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp">

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/cardview_light_background"
                tools:text="Upload Complete" />
    </com.google.android.material.card.MaterialCardView>

    <com.tijiebo.julia.ui.julia.JuliaView
            android:id="@+id/julia_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="56dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/reset"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/julia_view"
            app:layout_constraintEnd_toEndOf="@id/julia_view"
            app:iconPadding="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            app:backgroundTint="@android:color/transparent"
            app:iconTint="@color/purple_500"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_location_24" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/menu_highlights"
            android:textColor="@color/cardview_dark_background"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/highlights"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintStart_toEndOf="@id/label"
            android:clipToPadding="false"
            tools:listitem="@layout/highlights_item"
            tools:itemCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal" />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                    android:layout_width="54dp"
                    android:id="@+id/shutter"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:iconTint="#EEEEEE"
                    app:cornerRadius="48dp"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_circle_48" />

            <com.google.android.material.button.MaterialButton
                    android:layout_width="56dp"
                    android:id="@+id/more"
                    android:layout_height="56dp"
                    app:iconPadding="0dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                    app:backgroundTint="#EEE"
                    app:iconTint="@color/purple_500"
                    app:cornerRadius="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_add_24" />

            <com.google.android.material.button.MaterialButton
                    android:layout_width="56dp"
                    android:id="@+id/gallery"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:iconPadding="0dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                    app:backgroundTint="#EEE"
                    app:iconTint="@color/purple_500"
                    app:cornerRadius="48dp"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_photo_library_24" />

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/new_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top|start"
                    app:layout_constraintTop_toTopOf="@id/gallery"
                    app:layout_constraintEnd_toEndOf="@id/gallery"
                    app:cardCornerRadius="4dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@android:color/holo_red_dark" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>